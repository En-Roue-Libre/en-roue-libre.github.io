<div class="p-4 mt-4 animate__animated animate__faster animate__fadeInUp">
    {%- if calendar.postedEvents.length > 0 -%}
    <ol class="relative border-l border-lime-100 md:w-1/2 lg:w-1/3">
        {%- for event in calendar.postedEvents -%}
            <li class="mb-10 ml-4 font-serif">
                <div class="absolute w-3 h-3 bg-lime-100 rounded-full mt-1.5 -left-1.5 border border-lime-100"></div>
                <time class="mb-1 text-lg font-sans capitalize leading-none text-lime-100">{{ event.startTime | toLocaleDateString }}</time>
                <h3 class="text-3xl font-semibold {% if event.startTime | isPast %}text-gray-300 line-through{% else %}text-sky-300{% endif %}">{{ event.title }}</h3>
                <p class="mb-2 text-base font-normal text-gray-400">{{ event.description }}</p>
                <p class="mb-4 text-base font-bold text-slate-200">{{ event.signUpsAmount }} / {{ event.details.advancedSettings.limit }}</p>
                {%- if event.tanks.length > 0 -%}
                    <div class="ml-4">
                        {% include "partials/events/tanks.njk" %}
                    </div>
                {%- endif %}
                {%- if event.healers.length > 0 -%}
                    <div class="ml-4 mt-6">
                        {% include "partials/events/healers.njk" %}
                    </div>
                {%- endif %}
                {%- if event.dps.length > 0 -%}
                    <div class="ml-4 mt-6">
                        {% include "partials/events/dps.njk" %}
                    </div>
                {%- endif %}
                <a href="{{ event.compoUrl }}" target="_blank" class="mt-4 font-sans-serif text-white bg-[#0b81b7] hover:bg-[#0b81b7]/90 focus:ring-4 focus:outline-none focus:ring-[#0b81b7]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#0b81b7]/55 mr-2 mb-2">
                    <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                    </svg>  Raid Comp
                </a>
            </li>
        {%- endfor -%}
    </ol>
    {%- else -%}
        <div class="flex py-4 px-6 mb-4 text-lg text-blue-400 bg-gray-900 rounded-lg" role="alert">
            Aucun raid n'a été trouvé.
        </div>
    {%- endif -%}
</div>
